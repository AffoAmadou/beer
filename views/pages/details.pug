extends ../base.pug 

block variables     
    - var template = 'details'

block content 
    .detail
        .details__content 
            .details__content__wrapper
                .details__image__wrapper
                    figure.details__image__media 
                        img.details__image( src=beer.image_url alt=beer.name)
                .details__description__wrapper  
                    h2.details__title(data-animation="title")=beer.name
                    p.details__tagline(data-animation="paragraph")=beer.tagline
                    p.details__description(data-animation="paragraph")=beer.description
                    p.details__pairing(data-animation="paragraph")=("food pairing")
                    ul.details__food__pairing
                        each food in beer.food_pairing
                            li.details__food__pairing__item(data-animation="paragraph")=food